#include <ESP8266WiFi.h>
#include <ESP8266WebServer.h>

const char* ssid = "userwifi";
const char* password = "passwifi";

ESP8266WebServer server(80);

const int LED_PIN = 5;  // GPIO5 corresponds to D1

void setup() {
    pinMode(LED_PIN, OUTPUT);
    digitalWrite(LED_PIN, LOW);

    Serial.begin(115200);
    WiFi.begin(ssid, password);

    Serial.print("Connecting to Wi-Fi");
    while (WiFi.status() != WL_CONNECTED) {
        delay(500);
        Serial.print("...");
    }

    Serial.println("\nWi-Fi connected!");
    Serial.print("IP Address: ");
    Serial.println(WiFi.localIP());

    // Web server routes
    server.on("/", HTTP_GET, []() {
        server.send(200, "text/html", R"rawliteral(
            <!DOCTYPE html>
            <html>
            <head>
                <title>ESP8266 LED Controller</title>
                <meta name="viewport" content="width=device-width, initial-scale=1.0">
                <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
                <style>
                    body {
                        font-family: 'Poppins', sans-serif;
                        text-align: center;
                        margin-top: 50px;
                        background: url('https://images.unsplash.com/photo-1501856060201-66e39513e1f6') no-repeat center center fixed;
                        background-size: cover;
                        color: white;
                        padding: 0;
                        margin: 0;
                    }
                    h1 {
                        font-size: 36px;
                        color: #ff6347;
                        margin-bottom: 20px;
                    }
                    .btn {
                        padding: 18px 30px;
                        font-size: 20px;
                        margin: 15px;
                        cursor: pointer;
                        border-radius: 12px;
                        border: none;
                        transition: transform 0.3s ease;
                        background-color: rgba(0, 0, 0, 0.5);
                    }
                    .btn:hover {
                        transform: scale(1.1);
                    }
                    .on {
                        background-color: #32cd32;
                        color: white;
                    }
                    .off {
                        background-color: #ff4500;
                        color: white;
                    }
                    .status {
                        font-size: 22px;
                        margin-top: 20px;
                        color: #4682b4;
                    }

                    @media (max-width: 768px) {
                        h1 {
                            font-size: 30px;
                        }
                        .btn {
                            width: 80%;
                            font-size: 18px;
                            padding: 15px 25px;
                        }
                        .status {
                            font-size: 20px;
                        }
                    }

                    @media (max-width: 480px) {
                        h1 {
                            font-size: 26px;
                        }
                        .btn {
                            width: 80%;
                            font-size: 16px;
                            padding: 12px 22px;
                        }
                        .status {
                            font-size: 18px;
                        }
                    }
                </style>
            </head>
            <body>
                <h1>Welcome to the LED Controller!</h1>
                <button class="btn on" onclick="toggleLED('on')">Light it Up!</button>
                <button class="btn off" onclick="toggleLED('off')">Turn it Off!</button>
                <script>
                    function toggleLED(state) {
                        fetch('/' + state)
                            .then(response => response.text())
                            .then(text => {
                                document.getElementById('status').innerHTML = text;
                                if (state == 'on') {
                                    document.getElementById('status').style.color = '#32cd32';
                                } else {
                                    document.getElementById('status').style.color = '#ff4500';
                                }
                            });
                    }
                </script>
            </body>
            </html>
        )rawliteral");
    });

    server.on("/on", HTTP_GET, []() {
        digitalWrite(LED_PIN, HIGH);
        server.send(200, "text/plain", "Yay! The LED is shining bright! âœ¨");
    });

    server.on("/off", HTTP_GET, []() {
        digitalWrite(LED_PIN, LOW);
        server.send(200, "text/plain", "Aww, the LED is turned off. ðŸ˜¢");
    });

    server.begin();
    Serial.println("HTTP server started");
}

void loop() {
    server.handleClient();
}
